<h1>
  All Actors
</h1>

<p><a href="/actors/new_form" class="btn btn-primary">Add a new actor</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>DOB</th>
      <th>Name</th>
      <th>Bio</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tr>
    <% @actors.each do |actor| %>
    <td><img src="<%= actor.image_url %>" width="80"></td>
    <td><%= actor.dob %></td>
    <td><%= actor.name %></td>
    <td><%= truncate(actor.bio) %></td>
    <td>
      <a href="/actors/<%= actor.id %>" class="btn btn-primary"><i class="fa fa-search-plus"></i>
      </a>
    </td>
    <td>
      <a href="/actors/<%= actor.id %>/edit_form" class="btn btn-warning"><i class="fa fa-edit"></i>
      </a>
    </td>
    <td>
      <a href="/delete_actor/<%= actor.id %>" class="btn btn-danger"><i class="fa fa-trash-o"></i>
      </a>
    </td>
  </tr>
  <% end %>

</table>
