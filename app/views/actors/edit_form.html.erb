<div class="page-header">
  <h1>
    Edit Actor #<%= @actor.id %>
  </h1>
</div>

<form class="form-horizontal" action="/update_actor/<%= @actor.id %>">

  <div class="form-group">
    <label for="dob" class="col-sm-2 control-label">
      DOB
    </label>
    <div class="col-sm-10">
      <input type="text" id="dob" name="dob" value="<%= @actor.dob %>" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="name">
      Name
    </label>
    <div class="col-sm-10">
      <input type="text" id="name" name="name" value="<%= @actor.name %>" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="bio">
      Bio
    </label>
    <div class="col-sm-10">
      <textarea type="text" id="bio" name="bio" class="form-control" rows="3"><%= @actor.bio %></textarea>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" id="image_url">
      Image URL
    </label>
    <div class="col-sm-10">
      <input type="text" id="image_url" name="image_url" value="<%= @actor.image_url %>" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" class="btn btn-primary" value="Edit Actor">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <a href="/actors" class="btn btn-primary">Go Back</a>
    </div>
  </div>

</form>
