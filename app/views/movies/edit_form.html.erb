<div class="form-header">
  <h1>
    Edit Movie #<%= @movie.id %>
  </h1>
</div>

<form class="form-horizontal" action="/update_movie/<%= @movie.id %>">

  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">
      Titile
    </label>
    <div class="col-sm-10">
      <input type="text" name="title" id="title" value="<%= @movie.title %>" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <label for="year" class="col-sm-2 control-label">
      Year
    </label>
    <div class="col-sm-10">
      <input type="text" name="year" id="year" value="<%= @movie.year %>" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <label for="duration" class="col-sm-2 control-label">
      Duration
    </label>
    <div class="col-sm-10">
      <input type="text" name="duration" id="duration" value="<%= @movie.duration %>" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <label for="description" class="col-sm-2 control-label">
      Description
    </label>
    <div class="col-sm-10">
      <textarea type="text" name="description" id="description" class="form-control" rows="3"><%= @movie.description %></textarea>
    </div>
  </div>

  <div class="form-group">
    <label for="image_url" class="col-sm-2 control-label">
      Image URL
    </label>
    <div class="col-sm-10">
      <input type="text" name="image_url" id="image_url" value="<%= @movie.image_url %>" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" name="edit_movie" value="Edit Movie" class="btn btn-primary">
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <a href="/movies" class="btn btn-primary">Go Back</a>
    </div>
  </div>

</div>

</form>
